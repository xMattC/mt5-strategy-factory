    {% for buf in conf_buffers %}
    double {{ buf.name }}[];
    ArraySetAsSeries({{ buf.name }}, true);
    CopyBuffer(indi_handle, {{ buf.index }}, 1, 10, {{ buf.name }});

    {% endfor %}
    conf_long = ({{ conf_long_conditions }});
    conf_short = ({{ conf_short_conditions }});
}

